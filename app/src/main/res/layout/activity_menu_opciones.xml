<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuNavegacion"
    android:background="#000000">

    <ImageView
        android:id="@+id/imagenAtras"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/back1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/imagenmenu"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:src="@drawable/menu1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textoComienzoOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:text="Sistema de Modificación"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/_15sdp"
        android:fontFamily="@font/montserrat_medium"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textoComienzoOpciones2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:text="Mediante este sistema se podrán realizar los siguientes cambios a los dispositivos:"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        android:fontFamily="@font/montserrat_medium"
        android:inputType="textMultiLine"
        android:justificationMode="inter_word"

        app:layout_constraintTop_toBottomOf="@id/textoComienzoOpciones"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/logoOpciones"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/simetria"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_60sdp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cardAltaOpciones"/>

    <TextView
        android:id="@+id/textoUltimaModificacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_40sdp"

        app:layout_constraintTop_toTopOf="@id/textoComienzoOpciones2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAltaOpciones"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"

        app:strokeWidth="0.5dp"
        app:strokeColor="@color/white"

        app:cardCornerRadius="@dimen/_30sdp"
        app:cardElevation="@dimen/_50sdp"

        app:layout_constraintTop_toBottomOf="@id/logoOpciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradiente_item1">

            <ImageView
                android:id="@+id/imagenAdd"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/add2"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/addOpciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"

                android:text="Añadir un DISPOSITIVO"
                android:textColor="@color/white"
                android:textStyle="bold"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imagenAdd"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/localizacionAdd"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:src="@drawable/marker"

                app:layout_constraintTop_toBottomOf="@id/addOpciones"
                app:layout_constraintStart_toEndOf="@+id/imagenAdd"/>

            <TextView
                android:id="@+id/textoLocalizacionAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Castellón de la Plana"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/white"
                android:layout_marginTop="2dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"

                app:layout_constraintStart_toEndOf="@+id/localizacionAdd"
                app:layout_constraintTop_toBottomOf="@id/addOpciones"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBajaOpciones"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:backgroundTint="@android:color/transparent"

        app:strokeWidth="0.5dp"
        app:strokeColor="@color/white"

        app:cardCornerRadius="@dimen/_30sdp"
        app:cardElevation="@dimen/_50sdp"

        app:layout_constraintTop_toBottomOf="@id/cardAltaOpciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradiente_item_modify">

            <ImageView
                android:id="@+id/imagenDeleteOpciones"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cross2"
                android:layout_marginStart="@dimen/_10sdp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textoDeleteOpciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_15sdp"

                android:text="Eliminar un DISPOSITIVO"
                android:textColor="@color/white"
                android:textStyle="bold"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imagenDeleteOpciones"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/localizacion"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:src="@drawable/marker"

                app:layout_constraintTop_toBottomOf="@id/textoDeleteOpciones"
                app:layout_constraintStart_toEndOf="@+id/imagenDeleteOpciones"/>

            <TextView
                android:id="@+id/textoLocalizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Castellón de la Plana"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/white"
                android:layout_marginTop="2dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"

                app:layout_constraintStart_toEndOf="@+id/localizacion"
                app:layout_constraintTop_toBottomOf="@id/textoDeleteOpciones"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardModificarOpciones"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:backgroundTint="@android:color/transparent"

        app:strokeWidth="0.5dp"
        app:strokeColor="@color/white"

        app:cardCornerRadius="@dimen/_30sdp"
        app:cardElevation="@dimen/_50sdp"

        app:layout_constraintTop_toBottomOf="@id/cardBajaOpciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradiente_item_ampliacion1">

            <ImageView
                android:id="@+id/imagenModify"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/modificar"
                android:layout_marginStart="@dimen/_10sdp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textoModifyOpciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_15sdp"
                android:text="Modificar un DISPOSITIVO"
                android:textColor="@color/white"
                android:textStyle="bold"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imagenModify"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/localizacionModify"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:src="@drawable/marker"

                app:layout_constraintTop_toBottomOf="@id/textoModifyOpciones"
                app:layout_constraintStart_toEndOf="@+id/imagenModify"/>

            <TextView
                android:id="@+id/textoLocalizacionModify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Castellón de la Plana"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/white"
                android:layout_marginTop="2dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"

                app:layout_constraintStart_toEndOf="@+id/localizacionModify"
                app:layout_constraintTop_toBottomOf="@id/textoModifyOpciones"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAmpliacion1Opciones"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:backgroundTint="@android:color/transparent"

        app:strokeWidth="0.5dp"
        app:strokeColor="@color/white"

        app:cardCornerRadius="@dimen/_30sdp"
        app:cardElevation="@dimen/_50sdp"

        app:layout_constraintTop_toBottomOf="@id/cardModificarOpciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradiente_item_delete">

            <ImageView
                android:id="@+id/imagenAmpliacion1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/modificar"
                android:layout_marginStart="@dimen/_10sdp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textoAmpliacion1Opciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_15sdp"
                android:text="Menu de AMPLIACION 1 "
                android:textColor="@color/white"
                android:textStyle="bold"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imagenAmpliacion1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/localizacionAmpliacion1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:src="@drawable/marker"

                app:layout_constraintTop_toBottomOf="@id/textoAmpliacion1Opciones"
                app:layout_constraintStart_toEndOf="@+id/imagenAmpliacion1"/>

            <TextView
                android:id="@+id/textoLocalizacionAmpliacion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Castellón de la Plana"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/white"
                android:layout_marginTop="2dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"

                app:layout_constraintStart_toEndOf="@+id/localizacionAmpliacion1"
                app:layout_constraintTop_toBottomOf="@id/textoAmpliacion1Opciones"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="156dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/simetria1" />

</androidx.constraintlayout.widget.ConstraintLayout>